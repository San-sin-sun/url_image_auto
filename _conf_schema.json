{
    "extensions": {
        "type": "list",
        "description": "遇到以这些扩展名结尾的 URL 时，将其视为图片。",
        "default": [
            ".png",
            ".jpg",
            ".jpeg",
            ".gif",
            ".webp",
            ".bmp"
        ],
        "items": {
            "type": "string"
        }
    },
    "whitelist_rules": {
        "type": "list",
        "description": "总是将匹配这些域名/路径规则的 URL 视为图片（即使没有扩展名）。",
        "default": [
            {
                "host": "krcpsqplffnigtjeshns.supabase.co",
                "path_chars": "/functions/v1/random/biaoqing"
            }
        ],
        "items": {
            "type": "object",
            "description": "规则",
            "items": {
                "host": {
                    "type": "string",
                    "description": "域名 (例如 example.com)"
                },
                "path_chars": {
                    "type": "string",
                    "description": "路径必须以该字符串开头。留空则匹配该域名下的所有路径。",
                    "default": ""
                }
            }
        }
    },
    "convert_markdown": {
        "type": "bool",
        "description": "将 Markdown 图片语法 ![alt](url) 转换为图片组件。",
        "default": true
    },
    "convert_cq_code": {
        "type": "bool",
        "description": "将 CQ:image 码转换为图片组件。",
        "default": true
    },
    "randomize_seed": {
        "type": "bool",
        "description": "自动随机化 'seed' 查询参数，以防止随机图 API 被缓存。",
        "default": true
    }
}